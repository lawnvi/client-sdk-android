<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Room Connection Section -->
        <TextView
            android:id="@+id/roomControlsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/room_controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/urlInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/roomControlsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/urlEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/url_hint"
                android:inputType="textUri"
                android:text="wss://ls1.dearlink.com" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tokenInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/urlInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tokenEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/token_hint"
                android:inputType="textMultiLine"
                android:text="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE3NTQ2MzI3ODYsImlzcyI6ImxpdmVraXQtYXBpLWtleS0xIiwibmFtZSI6ImRldl91c2VyMSIsIm5iZiI6MTc1NDM3MzU4Niwic3ViIjoiZGV2X3VzZXIxIiwidmlkZW8iOnsicm9vbSI6Im15LWRldi1yb29tIiwicm9vbUpvaW4iOnRydWV9fQ.rAS9JGI3MyV9MjCNVCjsHuZs_A88TjR9aitx3iILfDg"
                android:minLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tokenInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/status_disconnected"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/connectButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Custom Audio Controls Section -->
        <TextView
            android:id="@+id/audioControlsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_audio_controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/statusTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/audioSourceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_source"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/audioControlsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/audioSourceSpinner" />

        <Spinner
            android:id="@+id/audioSourceSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/audioControlsTitle"
            app:layout_constraintStart_toEndOf="@+id/audioSourceLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PCM File Selection Button -->
        <Button
            android:id="@+id/selectPcmFileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="选择 PCM 文件"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/audioSourceSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:id="@+id/audioModeRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/selectPcmFileButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/replaceMicRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/replace_mic"
                android:checked="true" />

            <RadioButton
                android:id="@+id/mixWithMicRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mix_with_mic" />

        </RadioGroup>

        <Button
            android:id="@+id/startCustomAudioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_audio_input"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/audioModeRadioGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stopCustomAudioButton" />

        <Button
            android:id="@+id/stopCustomAudioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stop_audio_input"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/audioModeRadioGroup"
            app:layout_constraintStart_toEndOf="@+id/startCustomAudioButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/toggleMicButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/enable_mic"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/startCustomAudioButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Information -->
        <TextView
            android:id="@+id/audioStatusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="当前音频源: 麦克风"
            android:textAlignment="center"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleMicButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

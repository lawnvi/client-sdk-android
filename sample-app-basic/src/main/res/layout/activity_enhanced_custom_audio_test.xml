<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="增强版自定义音频测试"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 连接控制 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="房间连接"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnConnectRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接到房间" />

    <!-- 自定义音频测试 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义音频测试"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCreateSineWave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正弦波"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnCreateBeepSequence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="哔哔声"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnCreateWhiteNoise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="白噪声"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCreatePCMFromFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PCM文件"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnStopCustomAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止音频"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 高级功能 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="高级功能"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSwitchAudioMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="模式切换演示"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnShowDebugInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="调试信息"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 远程音频处理 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="远程音频处理"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartRemoteProcessing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始处理"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnStopRemoteProcessing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止处理"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 状态显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态信息"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="准备开始测试..."
        android:textSize="14sp"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/audioStatsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待音频数据..."
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="#F8F8F8"
            android:padding="8dp" />

    </ScrollView>

</LinearLayout>
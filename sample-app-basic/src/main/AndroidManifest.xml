<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.livekit.android.sample.basic">

    <!-- Permissions for audio recording and network access -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Livekitandroid">
        <activity
            android:name=".RemoteAudioProcessingTestActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PCMTestActivity"
            android:exported="true"
            android:label="PCM Audio Test" />

<!--        <activity-->
<!--            android:name=".ComprehensiveAudioTestActivity"-->
<!--            android:exported="true"-->
<!--            android:label="Comprehensive Audio Test" />-->
    </application>

</manifest>
